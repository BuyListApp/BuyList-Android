<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Main Screen-->
    <style name="Theme.AppCompat.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TitleOfSectionTheme" parent="Theme.AppCompat.Light">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#37474F</item>
    </style>

    <style name="ListNameTheme" parent="Theme.AppCompat.Light">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#37474F</item>
    </style>

    <!--CategoryFragment-->
    <style name="CategorySpinnerList">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4F4F4F</item>
    </style>

    <!--BuyListFragment-->
    <style name="TopButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_top_bg</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
