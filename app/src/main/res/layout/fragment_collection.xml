<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="ru.buylist.collection_lists.CollectionViewModel" />

        <variable
            name="callback"
            type="ru.buylist.collection_lists.CollectionClickCallback" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="Autofill">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!--Содержит все, кроме BN-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_layout_margin"
                android:orientation="vertical">

                <!--Контейнер с логотипом-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="58dp">

                    <ImageView
                        android:id="@+id/logo_view"
                        android:layout_width="155dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/logo_description"
                        android:src="@drawable/ic_logo" />
                </LinearLayout>

                <!--Создание списков-->
                <RelativeLayout
                    android:id="@+id/card_buy_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_layout_margin"
                    android:onClick="@{()-> callback.onBuyListCardClick()}">

                    <TextView
                        style="@style/TitleOfSectionTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/btn_new_buy_list"
                        android:drawableStart="@drawable/ic_list"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:gravity="start|center"
                        android:text="@string/list_collection" />

                    <ImageButton
                        android:id="@+id/btn_new_buy_list"
                        android:layout_width="@dimen/btn_new_list_size"
                        android:layout_height="@dimen/btn_new_list_size"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/btn_new_list_margin_end"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/btn_new_buy_list_description"
                        android:src="@drawable/button_add_collection"
                        android:onClick="@{()-> callback.onNewBuyListButtonClick()}" />
                </RelativeLayout>

                <!--Поля ввода нового списка-->
                <RelativeLayout
                    android:id="@+id/layout_buy_list_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_horizontal_margin"
                    android:layout_marginTop="@dimen/field_margin_vertical"
                    android:layout_marginEnd="@dimen/default_horizontal_margin"
                    android:visibility="@{viewmodel.layoutBuyListShow ? View.VISIBLE : View.GONE}"
                    android:background="@drawable/field_border">

                    <ru.buylist.utils.FocusableEditText
                        android:id="@+id/field_name_buy_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/btn_create_buy_list"
                        android:hint="@string/field_name_list_hint"
                        android:inputType="text"
                        android:background="@android:color/transparent"
                        android:text="@={viewmodel.buyListName}"
                        requestFocus="@{viewmodel.layoutBuyListShow}"/>

                    <ImageButton
                        android:id="@+id/btn_create_buy_list"
                        android:layout_width="@dimen/btn_create_size"
                        android:layout_height="@dimen/btn_create_size"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/btn_create_margin_end"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/btn_create_buy_list_description"
                        android:src="@drawable/button_create" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_buy_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_horizontal_margin"
                    android:layout_marginEnd="@dimen/default_horizontal_margin"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:visibility="@{viewmodel.recyclerBuyListShow ? View.VISIBLE : View.GONE}" />


                <View
                    android:id="@+id/divider_lists"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_size"
                    android:layout_margin="@dimen/small_layout_margin"
                    android:background="@color/colorDivider" />

                <!--Создание шаблонов-->
                <RelativeLayout
                    android:id="@+id/card_pattern"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_layout_margin"
                    android:onClick="@{()-> callback.onPatternListCardClick()}">

                    <TextView
                        style="@style/TitleOfSectionTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/btn_new_pattern"
                        android:drawableStart="@drawable/ic_pattern"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:gravity="start|center"
                        android:text="@string/list_pattern" />

                    <ImageButton
                        android:id="@+id/btn_new_pattern"
                        android:layout_width="@dimen/btn_new_list_size"
                        android:layout_height="@dimen/btn_new_list_size"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/btn_new_list_margin_end"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/btn_new_pattern_description"
                        android:src="@drawable/button_add_collection"
                        android:onClick="@{()-> callback.onNewPatternListButtonClick()}" />

                </RelativeLayout>

                <!--Подя ввода нового шаблона-->
                <RelativeLayout
                    android:id="@+id/layout_pattern_list_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_horizontal_margin"
                    android:layout_marginTop="@dimen/field_margin_vertical"
                    android:layout_marginEnd="@dimen/default_horizontal_margin"
                    android:visibility="@{viewmodel.layoutPatternListShow ? View.VISIBLE : View.GONE}"
                    android:background="@drawable/field_border">

                    <ru.buylist.utils.FocusableEditText
                        android:id="@+id/field_name_pattern_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/btn_create_pattern_list"
                        android:hint="@string/field_name_pattern_hint"
                        android:inputType="text"
                        android:background="@android:color/transparent"
                        android:text="@={viewmodel.patterName}"
                        requestFocus="@{viewmodel.layoutPatternListShow}"/>

                    <ImageButton
                        android:id="@+id/btn_create_pattern_list"
                        android:layout_width="@dimen/btn_create_size"
                        android:layout_height="@dimen/btn_create_size"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/btn_create_margin_end"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/btn_create_pattern_description"
                        android:src="@drawable/button_create" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_pattern"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_horizontal_margin"
                    android:layout_marginEnd="@dimen/default_horizontal_margin"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:visibility="@{viewmodel.recyclerPatternListShow ? View.VISIBLE : View.GONE}" />

                <View
                    android:id="@+id/divider_templates"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_size"
                    android:layout_margin="@dimen/small_layout_margin"
                    android:background="@color/colorDivider" />

                <!--Создание рецептов-->
                <RelativeLayout
                    android:id="@+id/card_recipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_layout_margin"
                    android:onClick="@{()-> callback.onRecipeListCardClick()}">

                    <TextView
                        style="@style/TitleOfSectionTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/btn_new_recipe"
                        android:drawableStart="@drawable/ic_recipe"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:gravity="start|center"
                        android:text="@string/recipe_list" />

                    <ImageButton
                        android:id="@+id/btn_new_recipe"
                        android:layout_width="@dimen/btn_new_list_size"
                        android:layout_height="@dimen/btn_new_list_size"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/btn_new_list_margin_end"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/btn_new_recipe_description"
                        android:src="@drawable/button_add_collection"
                        android:onClick="@{()-> callback.onNewRecipeListButtonClick()}" />
                </RelativeLayout>

                <!--Поля ввода нового рецепта-->
                <RelativeLayout
                    android:id="@+id/layout_recipe_list_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_horizontal_margin"
                    android:layout_marginTop="@dimen/small_layout_margin"
                    android:layout_marginEnd="@dimen/default_horizontal_margin"
                    android:background="@drawable/field_border"
                    android:visibility="@{viewmodel.layoutRecipeListShow ? View.VISIBLE : View.GONE}">

                    <ru.buylist.utils.FocusableEditText
                        android:id="@+id/field_name_recipe_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/btn_create_recipe_list"
                        android:hint="@string/field_name_recipe_hint"
                        android:inputType="text"
                        android:background="@android:color/transparent"
                        android:text="@={viewmodel.recipeName}"
                        requestFocus="@{viewmodel.layoutRecipeListShow}"/>

                    <ImageButton
                        android:id="@+id/btn_create_recipe_list"
                        android:layout_width="@dimen/btn_create_size"
                        android:layout_height="@dimen/btn_create_size"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/btn_create_margin_end"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/btn_create_recipe_description"
                        android:src="@drawable/button_create" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_recipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_horizontal_margin"
                    android:layout_marginEnd="@dimen/default_horizontal_margin"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:visibility="@{viewmodel.recyclerRecipeListShow ? View.VISIBLE : View.GONE}" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_size"
                    android:layout_margin="@dimen/small_layout_margin"
                    android:background="@color/colorDivider" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@color/colorNavBackground"
            app:itemIconTint="@drawable/bottom_navigation_color"
            app:itemTextColor="@drawable/bottom_navigation_color"
            app:menu="@menu/bottom_navigation_menu" />
    </LinearLayout>
</layout>