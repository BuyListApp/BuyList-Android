<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="ru.buylist.collection_lists.CollectionViewModel" />

        <variable
            name="callback"
            type="ru.buylist.collection_lists.CollectionClickCallback" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="Autofill">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!--Содержит все, кроме BN-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <!--Контейнер с логотипом-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="58dp">

                    <ImageView
                        android:id="@+id/logo_view"
                        android:layout_width="155dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/logo_description"
                        android:src="@drawable/ic_logo" />
                </LinearLayout>

                <!--Создание списков-->
                <RelativeLayout
                    android:id="@+id/card_buy_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:onClick="@{()-> callback.onBuyListCardClick()}">

                    <TextView
                        style="@style/TitleOfSectionTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:drawableStart="@drawable/ic_list"
                        android:drawablePadding="16dp"
                        android:gravity="start|center"
                        android:text="@string/list_collection" />

                    <ImageButton
                        android:id="@+id/btn_new_buy_list"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/new_list_description"
                        android:src="@drawable/button_add_collection"
                        android:onClick="@{()-> callback.onNewBuyListButtonClick()}" />
                </RelativeLayout>

                <!--Поля ввода нового списка-->
                <RelativeLayout
                    android:id="@+id/layout_buy_list_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:visibility="@{viewmodel.layoutBuyListShow ? View.VISIBLE : View.GONE}">

                    <EditText
                        android:id="@+id/field_name_buy_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/btn_create_buy_list"
                        android:hint="@string/name_list_collection_hint"
                        android:inputType="text"
                        android:text="@={viewmodel.buyListName}" />

                    <ImageButton
                        android:id="@+id/btn_create_buy_list"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="14dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/create_new_list_collection_description"
                        android:src="@drawable/button_create" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_buy_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:visibility="@{viewmodel.recyclerBuyListShow ? View.VISIBLE : View.GONE}" />


                <View
                    android:id="@+id/divider_lists"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/colorDivider" />

                <!--Создание шаблонов-->
                <RelativeLayout
                    android:id="@+id/card_pattern"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:onClick="@{()-> callback.onPatternListCardClick()}">

                    <TextView
                        style="@style/TitleOfSectionTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:drawableStart="@drawable/ic_pattern"
                        android:drawablePadding="16dp"
                        android:gravity="start|center"
                        android:text="@string/list_templates" />

                    <ImageButton
                        android:id="@+id/btn_new_pattern"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/new_pattern_description"
                        android:src="@drawable/button_add_collection"
                        android:onClick="@{()-> callback.onNewPatternListButtonClick()}" />

                </RelativeLayout>

                <!--Подя ввода нового шаблона-->
                <RelativeLayout
                    android:id="@+id/layout_pattern_list_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:visibility="@{viewmodel.layoutPatternListShow ? View.VISIBLE : View.GONE}">

                    <EditText
                        android:id="@+id/field_name_pattern_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/btn_create_pattern_list"
                        android:hint="@string/name_pattern_hint"
                        android:inputType="text"
                        android:text="@={viewmodel.patterName}" />

                    <ImageButton
                        android:id="@+id/btn_create_pattern_list"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="14dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/new_pattern_description"
                        android:src="@drawable/button_create" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_pattern"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:visibility="@{viewmodel.recyclerPatternListShow ? View.VISIBLE : View.GONE}" />

                <View
                    android:id="@+id/divider_templates"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/colorDivider" />

                <!--Создание рецептов-->
                <RelativeLayout
                    android:id="@+id/card_recipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:onClick="@{()-> callback.onRecipeListCardClick()}">

                    <TextView
                        style="@style/TitleOfSectionTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:drawableStart="@drawable/ic_recipe"
                        android:drawablePadding="16dp"
                        android:gravity="start|center"
                        android:text="@string/recipe_list" />

                    <ImageButton
                        android:id="@+id/btn_new_recipe"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/new_recipe_description"
                        android:src="@drawable/button_add_collection"
                        android:onClick="@{()-> callback.onNewRecipeListButtonClick()}" />
                </RelativeLayout>

                <!--Поля ввода нового рецепта-->
                <RelativeLayout
                    android:id="@+id/layout_recipe_list_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:visibility="@{viewmodel.layoutRecipeListShow ? View.VISIBLE : View.GONE}">

                    <EditText
                        android:id="@+id/field_name_recipe_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/btn_create_recipe_list"
                        android:hint="@string/name_recipe_hint"
                        android:inputType="text"
                        android:text="@={viewmodel.recipeName}" />

                    <ImageButton
                        android:id="@+id/btn_create_recipe_list"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="14dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/new_recipe_description"
                        android:src="@drawable/button_create" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_recipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:visibility="@{viewmodel.recyclerRecipeListShow ? View.VISIBLE : View.GONE}" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/colorDivider" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@color/color_bn_primary"
            app:itemIconTint="@color/color_icon_bn"
            app:itemTextColor="@color/color_icon_bn"
            app:menu="@menu/bottom_navigation_menu" />
    </LinearLayout>
</layout>