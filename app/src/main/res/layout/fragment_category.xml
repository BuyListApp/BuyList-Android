<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="viewmodel"
            type="ru.buylist.buy_list.BuyListViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <!--Название товара-->
        <LinearLayout
            android:id="@+id/category_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/item_name_default_text"
                android:textSize="38sp" />

            <TextView
                android:id="@+id/text_view_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/product_text"
                android:textSize="16sp" />
        </LinearLayout>

        <!--Ввод / выбор категории-->
        <LinearLayout
            android:id="@+id/layout_auto_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_below="@id/category_top_layout"
            android:layout_above="@id/recycler_circles">

            <AutoCompleteTextView
                android:id="@+id/new_category_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/new_category_name_hint" />

            <ImageButton
                android:id="@+id/category_spinner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/category_spinner_description"
                android:src="@drawable/ic_spinner_arrow" />

        </LinearLayout>

        <!--Кнопки для создания новой категории-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_circles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal" />

        <ImageButton
            android:id="@+id/btn_prev_circles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_arrow_left"
            android:background="@android:color/transparent"
            android:contentDescription="@string/btn_prev_color_description"
            android:visibility="@{viewmodel.btnPrevCirclesShow ? View.VISIBLE : View.GONE}"/>

        <ImageButton
            android:id="@+id/btn_next_circles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_arrow_right"
            android:background="@android:color/transparent"
            android:contentDescription="@string/btn_next_color_description"
            android:visibility="@{viewmodel.btnPrevCirclesShow ? View.GONE : View.VISIBLE}"/>


        <LinearLayout
            android:id="@+id/layout_bottom_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="@string/button_next_text"
                android:textAllCaps="false"
                android:textColor="@color/colorButtonNextText"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:text="@string/button_skip_text"
                android:textAllCaps="false"
                android:textColor="@color/colorButtonSkipText"
                android:textSize="17sp" />
        </LinearLayout>


    </RelativeLayout>
</layout>