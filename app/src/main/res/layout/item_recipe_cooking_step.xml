<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="wrapper"
            type="ru.buylist.data.entity.wrappers.CookingStepWrapper" />

        <variable
            name="callback"
            type="ru.buylist.presentation.adapters.recipe_adapters.CookingStepListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_number_of_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="1."
                android:textSize="@dimen/default_text_size"/>

            <TextView
                android:id="@+id/tv_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_number_of_step"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@+id/btn_more"
                android:background="@android:color/transparent"
                android:textSize="@dimen/default_text_size"
                android:text="@{wrapper.step.description}"
                android:visibility="@{wrapper.editable ? View.GONE : View.VISIBLE}"/>

            <EditText
                android:id="@+id/field_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_number_of_step"
                android:layout_toStartOf="@+id/btn_save"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:textSize="@dimen/default_text_size"
                android:imeOptions="actionDone"
                android:text="@{wrapper.step.description}"
                android:visibility="@{wrapper.editable ? View.VISIBLE : View.GONE}"/>

            <ImageView
                android:id="@+id/btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_more"
                android:onClick="@{()-> callback.onButtonMoreClick(wrapper)}"
                android:visibility="@{wrapper.editable ? View.GONE : View.VISIBLE}"
                app:tint="@color/colorNavNormal" />

            <ImageView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/button_create"
                android:onClick="@{()-> callback.onButtonSaveClick(wrapper)}"
                android:visibility="@{wrapper.editable ? View.VISIBLE : View.GONE}" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>