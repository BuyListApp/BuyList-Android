<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="ru.buylist.buy_list.BuyListCallback" />
        <variable
            name="item"
            type="ru.buylist.data.entity.Item" />
    </data>

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/layout_swipe_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:drag_edge="right">

        <FrameLayout
            android:id="@+id/layout_bottom_swipe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_edit_item"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/edit_description"
                    android:onClick="@{()-> callback.onEditButtonClick(item)}"
                    app:srcCompat="@drawable/ic_edit" />

                <ImageButton
                    android:id="@+id/btn_delete_item"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/delete_description"
                    android:onClick="@{()-> callback.onDeleteButtonClick(item)}"
                    app:srcCompat="@drawable/ic_delete" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_top_swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <android.support.v7.widget.CardView
                android:id="@+id/card_top_item_swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:cardCornerRadius="8dp"
                android:onClick="@{()-> callback.onItemClick(item)}"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_category_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/category_description"
                        android:src="@drawable/circle" />

                    <TextView
                        android:id="@+id/text_view_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/img_category_circle"
                        android:background="@{item.purchased ? @drawable/strike_through : null}"
                        android:text="@{item.name}"
                        android:textSize="22sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/text_view_item_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="16dp"
                        android:text="@{item.quantity + item.unit}"
                        android:textSize="22sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </FrameLayout>
    </com.daimajia.swipe.SwipeLayout>
</layout>