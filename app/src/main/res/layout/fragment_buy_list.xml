<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="ru.buylist.buy_list.BuyListViewModel" />

        <variable
            name="callback"
            type="ru.buylist.buy_list.BuyListCallback" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="Autofill">

        <LinearLayout
            android:id="@+id/layout_top_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_pattern"
                style="@style/TopButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_layout_margin"
                android:layout_weight="1"
                android:text="@string/btn_pattern_text"
                android:onClick="@{()-> callback.onPatternButtonClick()}" />

            <Button
                android:id="@+id/btn_recipe"
                style="@style/TopButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_layout_margin"
                android:layout_weight="1"
                android:text="@string/btn_recipe_text"
                android:onClick="@{()-> callback.onRecipeButtonClick()}" />
        </LinearLayout>

        <View
            android:id="@+id/products_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_size"
            android:layout_marginTop="@dimen/small_layout_margin"
            android:layout_marginBottom="@dimen/small_layout_margin"
            android:background="@color/colorDivider" />

        <LinearLayout
            android:id="@+id/layout_item_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/field_border"
            android:visibility="@{viewmodel.layoutFieldsShow ? View.VISIBLE : View.GONE}">

            <ru.buylist.utils.FocusableEditText
                android:id="@+id/field_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:hint="@string/item_name_default_text"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:text="@={viewmodel.itemName}"
                requestFocus="@{viewmodel.layoutFieldsShow}"/>

            <ru.buylist.utils.FocusableEditText
                android:id="@+id/field_quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/field_quantity_margin_end"
                android:gravity="center"
                android:hint="@string/field_quantity_hint"
                android:inputType="text"
                android:background="@drawable/field_bg"
                android:text="@={viewmodel.quantity}"/>

            <ru.buylist.utils.FocusableEditText
                android:id="@+id/field_unit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/field_unit_hint"
                android:inputType="text"
                android:background="@drawable/field_bg"
                android:text="@={viewmodel.unit}"/>

            <ImageButton
                android:id="@+id/btn_create_item"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/btn_create_item_description"
                android:src="@drawable/button_create" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:buyItems="@{viewmodel.items}" />

    </LinearLayout>

</layout>