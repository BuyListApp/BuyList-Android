<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/list_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="start|center"
            android:text="@string/list_collection"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/new_list_collection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/new_list_collection_description"
            android:src="@drawable/ic_add_white" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_collection_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/new_list_collection_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <EditText
            android:id="@+id/name_new_list_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="@string/name_list_collection_hint"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/create_new_list_collection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/create_new_list_collection_description"
            android:src="@drawable/ic_check_black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/list_templates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="start|center"
            android:text="@string/list_templates"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/new_list_templates"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/new_list_templates_description"
            android:src="@drawable/ic_add_white" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_templates_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recipe_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="start|center"
            android:text="@string/recipe_list"
            android:textAllCaps="false"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/new_recipe_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/new_recipe_description"
            android:src="@drawable/ic_add_white" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recipe_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>