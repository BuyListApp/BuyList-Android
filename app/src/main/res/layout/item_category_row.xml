<?xml version="1.0" encoding="utf-8"?>
<!--Отдельный layout используются для удобного изменения цвета imageView-->
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="category"
            type="ru.buylist.data.entity.Category" />
        <variable
            name="callback"
            type="ru.buylist.buy_list.CategoryCallback.CategoryRowCallback" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:onClick="@{() -> callback.onRowClick(category)}">

    <ImageView
        android:id="@+id/img_category_circle"
        android:layout_width="@dimen/img_category_circle"
        android:layout_height="@dimen/img_category_circle"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small_layout_margin"
        android:layout_marginStart="@dimen/category_item_margin_start"
        android:layout_marginBottom="@dimen/small_layout_margin"
        android:contentDescription="@string/category_marker_description"
        android:src="@drawable/circle" />

    <TextView
        android:id="@+id/text_view_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/category_item_margin_start"
        android:textAppearance="@style/CategorySpinnerList"
        android:layout_gravity="center"
        android:text="@{category.name}"/>

</LinearLayout>
</layout>